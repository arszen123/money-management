category
-------
id PK int
user_id int FK >- users.id
name varchar
type smallint
icon varchar
is_deleted tinyint

budget_category
-----
budget_id int(11) FK >- budget.id
category_id int(11) FK >- category.id

budget
---------
id PK int
name varchar
starting_balance int
current_balance int
from timestamp
to timestamp
user_id FK >- users.id

transaction
-----------
id int PK
user_id int FK >- users.id
wallet_id int FK >- wallet.id
category_id int FK >- category.id
amount int
comment varchar
tag varchar
created_at timestamp
updated_at timestamp

users
-----
id int PK
name varchar Unique
email varchar
email_verified_at timestamp
password varchar
remember_token varchar
created_at timestamp
updated_at timestamp

wallet
------
id int PK
user_id int FK >- users.id
balance int
name varchar